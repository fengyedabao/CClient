<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">

    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/transparent</item>-->
        <!--<item name="colorPrimaryDark">@color/black</item>-->
        <!--<item name="colorAccent">@color/transparent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- main_tabbar-->
    <style name="main_tabbar_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="main_tabbar_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/main_tabbar_image_padding_bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="main_tabbar_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/main_tabar_text_padding_bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- top_bar-->
    <style name="top_bar_title_view">
        <item name="android:textColor">@color/top_bar_title_color</item>
        <item name="android:textSize">@dimen/top_bar_title_text_size</item>
        <item name="android:text">"123"</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="top_bar_image_button">
        <item name="android:layout_width">?attr/actionBarSize</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="LineView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/color_line</item>
    </style>

    <style name="item_primary_text_style">
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textSize">@dimen/item_primary_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:typeface">normal</item>
        <!--<item name="android:textStyle">italic</item>-->
    </style>

    <style name="item_secondary_text_style">
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">@dimen/item_secondary_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">10dp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:typeface">normal</item>
        <!--<item name="android:textStyle">italic</item>-->
    </style>

    <style name="checkbox_switch_style">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/checkbox_switch2</item>
        <item name="android:button">@null</item>

    </style>

    <style name="seekbar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:maxHeight">10dp</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:progressDrawable">@drawable/seekbar_color</item>
        <item name="android:thumb">@mipmap/seekbar_thumb</item>
    </style>

    <style name="CubeBaseTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/ActivityAnimation</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <style name="ActivityAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/push_left_in</item>
        <item name="android:activityOpenExitAnimation">@anim/push_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/push_right_in</item>
        <item name="android:activityCloseExitAnimation">@anim/push_right_out</item>
        <item name="android:taskOpenEnterAnimation">@null</item>
        <item name="android:taskOpenExitAnimation">@null</item>
        <item name="android:taskCloseEnterAnimation">@null</item>
        <item name="android:taskCloseExitAnimation">@null</item>
        <item name="android:taskToFrontEnterAnimation">@null</item>
        <item name="android:taskToFrontExitAnimation">@null</item>
        <item name="android:taskToBackEnterAnimation">@null</item>
        <item name="android:taskToBackExitAnimation">@null</item>
    </style>

    <style name="edit_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/list_item_text_color</item>
        <item name="android:textSize">@dimen/list_item_text_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@null</item>
        <item name="android:typeface">normal</item>
        <item name="android:hint">@string/edit_scenario_name_hint</item>
        <item name="android:textColorHint">@color/text_color_hint</item>
    </style>

    <style name="common_item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_device_add</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="image_right_style">
        <item name="android:layout_width">@dimen/sliding_menu_icon_size</item>
        <item name="android:layout_height">@dimen/sliding_menu_icon_size</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/icon_margin</item>
        <item name="android:src">@drawable/ir_control_right</item>
    </style>
    <!--dialog style-->

    <style name="dialog" parent="@android:style/Theme.Dialog">

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="bottom_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/btn_bg</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="tip_text_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/item_height_device_add</item>
        <item name="android:textColor">@color/text_color_secondary</item>
        <item name="android:textSize">@dimen/item_primary_text_size</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingTop">20dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:typeface">normal</item>
        <!--<item name="android:textStyle">italic</item>-->
    </style>

    <style name="device_detail_icon_style">
        <item name="android:layout_width">@dimen/device_icon_size</item>
        <item name="android:layout_height">@dimen/device_icon_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:src">@mipmap/menu_about</item>
    </style>

    <style name="device_detail_icon_disable_style">
        <item name="android:layout_width">10dp</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:src">@mipmap/offline</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="expandable_icon_style">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:src">@drawable/ir_control_down</item>
    </style>
</resources>
