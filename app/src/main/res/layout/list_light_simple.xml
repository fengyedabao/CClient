<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/thumb_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_icon"
            style="@style/device_detail_icon_style" />

        <ImageView
            android:id="@+id/iv_disable"
            style="@style/device_detail_icon_disable_style"
            android:layout_alignBottom="@+id/iv_icon"
            android:layout_alignRight="@+id/iv_icon" />

        <TextView
            android:id="@+id/tv_text"
            style="@style/list_item_text_style"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/cb_switch"
            android:layout_toRightOf="@+id/iv_icon" />

        <CheckBox
            android:id="@+id/cb_switch"
            style="@style/checkbox_switch_style" />

        <ImageView
            android:id="@+id/iv_expandable"
            style="@style/expandable_icon_style"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">


    </RelativeLayout>
</LinearLayout>


