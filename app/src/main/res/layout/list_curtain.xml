<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/thumb_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/iv_icon"
            style="@style/device_detail_icon_style" />

        <ImageView
            android:id="@+id/iv_disable"
            style="@style/device_detail_icon_disable_style"
            android:layout_alignBottom="@+id/iv_icon"
            android:layout_alignRight="@+id/iv_icon" />

        <TextView
            android:id="@+id/tv_text"
            style="@style/list_item_text_style"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_toLeftOf="@+id/iv_expandable"
            android:layout_toRightOf="@+id/iv_icon" />

        <ImageView
            android:id="@+id/iv_expandable"
            style="@style/expandable_icon_style"
            android:visibility="visible" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:id="@+id/iv_secondary_left"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@mipmap/curtain_left" />

        <ImageView
            android:id="@+id/iv_secondary_middle"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@mipmap/curtain_center" />

        <ImageView
            android:id="@+id/iv_secondary_right"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@mipmap/curtain_right" />
    </LinearLayout>
</LinearLayout>


