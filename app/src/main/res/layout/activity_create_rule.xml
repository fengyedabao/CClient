<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_background"
    android:orientation="vertical">


    <include layout="@layout/layout_header_opaque" />

    <include layout="@layout/layout_divider" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                style="@style/divider_style"
                android:layout_marginTop="@dimen/header_margin"></View>

            <com.honeywell.cube.widgets.EditTextItem
                android:id="@+id/ei_name"
                style="@style/common_item_style" />

            <View style="@style/divider_margin_style" />

            <com.honeywell.cube.widgets.TimeSelectorItem
                android:id="@+id/tsi_delay"
                style="@style/common_item_style" />

            <View style="@style/divider_margin_style" />

            <com.honeywell.cube.widgets.SwitchItem
                android:id="@+id/ci_work_time"
                style="@style/common_item_style" />

            <LinearLayout
                android:id="@+id/ll_hide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <View style="@style/divider_margin_style" />

                <com.honeywell.cube.widgets.TimeSelectorItem
                    android:id="@+id/tsi_start_time"
                    style="@style/common_item_style" />

                <View style="@style/divider_margin_style" />

                <com.honeywell.cube.widgets.TimeSelectorItem
                    android:id="@+id/tsi_end_time"
                    style="@style/common_item_style" />

                <View style="@style/divider_margin_style" />

                <com.honeywell.cube.widgets.WeekSelectItem
                    android:id="@+id/wsi_repeat"
                    style="@style/common_item_style" />

            </LinearLayout>

            <View style="@style/divider_style" />

            <TextView
                style="@style/tip_text_style"
                android:text="@string/step_one_tip" />

            <View style="@style/divider_style" />

            <com.honeywell.cube.widgets.SelectItem
                android:id="@+id/si_condition"
                style="@style/common_item_style" />

            <View style="@style/divider_style" />

            <TextView
                style="@style/tip_text_style"
                android:text="@string/step_two_tip" />

            <View style="@style/divider_style" />

            <com.honeywell.cube.widgets.SelectItem
                android:id="@+id/si_task"
                style="@style/common_item_style" />

            <View style="@style/divider_style" />

        </LinearLayout>
    </ScrollView>


</LinearLayout>